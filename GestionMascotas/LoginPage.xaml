<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionMascotas.LoginPage"
             Title="Inicio de Sesión">
    <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

        <Label Text="Bienvenido" FontSize="32" HorizontalOptions="Center" />

        <Entry x:Name="txtUsuario" Placeholder="Usuario" />
        <Entry x:Name="txtPassword" Placeholder="Contraseña" IsPassword="True" />

        <Button Text="Iniciar Sesión" Clicked="OnLoginClicked" />

        <Label Text="Nota: Usuario: admin / Pass: 123" 
               FontSize="10" TextColor="Gray" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>